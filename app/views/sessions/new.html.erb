<section class="page">
  <div class="centered-box">
    <h1>New Session</h1>
    <h3>sign in below</h3>
    <form action="<%= session_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <label for="user_username">User Name</label>
      <input type="text"
        name="user[username]"
        id="user_username"
        value="">
      <br>

      <label for="user_password">Password</label>
      <input type="password"
        name="user[password]"
        id="user_password"
        value="">
      <br>

      <input type="submit">
    </form>
  </div>
</section>